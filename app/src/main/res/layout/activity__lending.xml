<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.forebear.treschattingapp.Activity_Lending">

    <RelativeLayout
        android:id="@+id/lending_header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/blue">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/currentUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="Mark Zukaberg \n +125865466"
                android:textColor="@color/White"
                android:textSize="15dp"
                android:fontFamily="@font/lato_regular" />

            <Button
                android:id="@+id/lending_logout"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:background="@color/gray"
                android:text="Logout"
                android:textColor="@color/White"
                android:textSize="15dp"
                android:fontFamily="@font/lato_regular" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/registerUser_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Registered User"
                    android:textColor="@color/blue"
                    android:background="@color/recive"
                    android:textSize="15dp"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    android:fontFamily="@font/lato_regular" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/onlineUser_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:text="Online User"
                    android:textColor="@color/blue"
                    android:background="@color/recive"
                    android:textSize="15dp"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    android:fontFamily="@font/lato_regular"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

   <!-- <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lending_header"
        android:layout_margin="5dp"
        android:id="@+id/swipe_refresh_layout">-->
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/online_user_list"
        android:layout_below="@id/lending_header"
        android:layout_margin="5dp">

    </ListView>
  <!--  </android.support.v4.widget.SwipeRefreshLayout>-->
</RelativeLayout>
